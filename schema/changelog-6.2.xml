<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
  logicalFilePath="changelog-6.2">

  <changeSet author="author" id="changelog-6.2">
    <createTable tableName="LoginHistory">
      <column name="id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_id" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="login_time" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="logout_time" type="TIMESTAMP"/>
      <column name="ip_address" type="VARCHAR(45)"/>
      <column name="user_agent" type="VARCHAR(255)"/>
      <column name="login_status" type="VARCHAR(50)"/>
      <column name="failure_reason" type="VARCHAR(255)"/>
    </createTable>

    <addForeignKeyConstraint baseTableName="LoginHistory"
                             baseColumnNames="user_id"
                             constraintName="fk_login_history_user"
                             referencedTableName="tc_users"
                             referencedColumnNames="id"/>
  </changeSet>

</databaseChangeLog>
